<img src="{{game.background_image}}" alt="">
{{game.name}}

{{!-- Add/Remove Game from user collection --}}
<form method="POST" {{#unless inCollection}}action="/game/add-collection" {{/unless}} {{#if
  inCollection}}action="/game/remove-collection" {{/if}}>
  <input type="hidden" class="hide" name="gameID" value="{{game._id}}">
  <button type="submit">
    {{#unless inCollection}}<i class="far fa-bookmark"></i>{{/unless}}
    {{#if inCollection}}<i class="fas fa-bookmark"></i>{{/if}}
  </button>
</form>

{{!-- Add/Remove Game from user wishlist --}}
{{#unless inCollection}}
<form method="POST" {{#unless inWishlist}}action="/game/add-wishlist" {{/unless}} {{#if
  inWishlist}}action="/game/remove-wishlist" {{/if}}>
  <input type="hidden" class="hide" name="gameID" value="{{game._id}}">
  <button type="submit">
    {{#unless inWishlist}}<i class="far fa-heart"></i>{{/unless}}
    {{#if inWishlist}}<i class="fas fa-heart"></i>{{/if}}
  </button>
</form>
{{/unless}}

{{!-- INFO WE GET FROM THE DDBB --}}
{{game.released}}
{{game.metacritic}}
{{#each game.genres}}
<span>{{this}}</span>
{{/each}}
{{#each game.tags}}
<span>{{this}}</span>
{{/each}}
{{#each game.screenshoots}}
<img src="{{this}}" alt="">
{{/each}}
{{game.upvote}}
{{game.dowvote}}
{{game.gameSaved}}
{{game.website}}
{{game.metacritic_url}}
{{game.developers}}
{{#each game.developers}}
<p>{{this}}</p>
{{/each}}
{{{game.description}}}

{{!-- TODO partial --}}
{{#if sessionUser}}
<form action="/review/create" method="POST">
  <input type="hidden" class="hide" name="gameID" value="{{game._id}}">
  <textarea name="review" id="review" cols="30" rows="10"></textarea>
  <button type="submit">Post review</button>
</form>
{{/if}}


{{!-- TODO partials --}}
<div class="review-container">
{{#each reviews}}
{{#if user._id}}
<a href="/profile/{{user._id}}">{{user.name}}</a>
{{/if}}
{{#unless user}}
<p>Unknown</p>
{{/unless}}
{{comment}}
{{#if sessionUserRev}}
<form action="/review/{{_id}}/edit" method="GET">
  <button type="submit"><i class="far fa-edit"></i></button>
</form>
<button class="remove-review far fa-trash-alt"><span class="hide">{{_id}}</span></button>
{{/if}}
{{created_at}}
{{#unless sessionUserRev}}
<form action="/review/{{_id}}/upvote" method="POST">
  <button type="submit"><i class="far fa-thumbs-up"></i>{{upvote}}</button>
</form>
<form action="/review/{{_id}}/downvote" method="POST">
  <button type="submit"><i class="far fa-thumbs-down"></i>{{downvote}}</button>
</form>
{{/unless}}
{{/each}}
</div>


<script src="/javascripts/axiosHandler.js"></script>
